@model Comment


<div class="card mt-3">
    <div class="card-body">
        <p class="text-muted">
            @{
                if (!string.IsNullOrEmpty(Model.User?.Username))
                {
                    @Model.User.Username
                }
                else
                {
                    @:Anonymous
                }
            }
        </p>
        <p>@Model.Body</p>
        <p class="text-muted">Posted on: @Model.TimeCreated.ToString("dd/MM/yyyy")</p>
        <p class="text-muted">Last edited: @Model.TimeUpdated.ToString("dd/MM/yyyy")</p>
    </div>
</div>
