@model Post

<div class="card mb-3" style="max-width:540px">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Model.Thumbnail" class="card-img" alt="TopicImage" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    @Model.Head
                </h5>
                <p class="card-text">
                    <small class="text-muted">
                        Posted @Model.TimeCreated
                    </small>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        Posted @Model.TimeUpdated
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>