@using Blogging.ViewModels
@model LoginViewModel;

<div class="container">
    <h3 class="text-center mt-5 mb-5">Uloguj se</h3>

    <div>
        <form asp-controller="User" asp-action="SignIn" method="post" role="form" class="d-flex justify-content-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-4">
                <div class="row g-2">
                    <div class="col-12">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input type="submit" class="btn btn-success" value="Uloguj se" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>